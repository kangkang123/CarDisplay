<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/dl_screen"
                                        xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#fff"
                                        android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#fff"
                  android:orientation="vertical">
        <include layout="@layout/title_my"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="32dp"
                      android:layout_marginRight="32dp"
                      android:layout_marginTop="16dp"
                      android:orientation="horizontal">

            <RelativeLayout android:layout_width="600dp"
                            android:layout_height="400dp"
                            android:gravity="center_vertical">
                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_car_detail"
                    android:layout_width="600dp"
                    android:layout_height="400dp"
                />
                <TextView
                    android:id="@+id/tv_image_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal"
                    android:text="1/10"
                    android:textColor="#fff"/>

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentBottom="true"
                           android:layout_alignParentRight="true"
                           android:src="@drawable/big"/>

            </RelativeLayout>

            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="32dp"
                          android:layout_marginTop="16dp"
                          android:layout_weight="1"
                          android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_car_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="马自达 马自达 1.6T 手自一体 经典款 精英版"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_marginBottom="14dp"
                              android:layout_marginTop="14dp"
                              android:orientation="horizontal">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="￥"
                              android:textColor="#ed6d00"
                              android:textSize="12sp"
                              android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tv_car_detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16.00"
                        android:textColor="#ed6d00"
                        android:textSize="28sp"
                        android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="万"
                              android:textColor="#ed6d00"
                              android:textSize="12sp"
                              android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="15dp"
                              android:background="#ed6d00"
                              android:text="橙信一口价"
                              android:textColor="#fff"
                              android:textSize="12sp"
                              android:textStyle="bold"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="2px"
                      android:background="#d6d6d6"/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:layout_marginBottom="16dp"
                              android:layout_marginTop="16dp"
                              android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_car_detail_emission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/environment"
                        android:drawablePadding="6dp"
                        android:text="国四"
                        android:textColor="#333"
                        android:textSize="16sp"
                    />
                    <TextView
                        android:id="@+id/tv_car_detail_mileage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/km"
                        android:layout_marginLeft="15dp"
                        android:drawablePadding="6dp"
                        android:text="84.00万公里"
                        android:textColor="#333"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_car_detail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/day"
                        android:drawablePadding="6dp"
                        android:text="2016-4上牌"
                        android:layout_marginLeft="15dp"
                        android:textColor="#333"
                        android:textSize="16sp"/>

                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="2px"
                      android:background="#d6d6d6"/>

                <RelativeLayout
                    android:id="@+id/rl_car_detail_more"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:clickable="true"
                    android:gravity="center_vertical">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="match_parent"
                              android:text="车辆详情"
                              android:gravity="center"
                              android:textColor="#333"
                              android:textSize="16sp"/>
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_alignParentRight="true"
                               android:gravity="center"
                               android:src="@drawable/enter"/>
                </RelativeLayout>
                <View android:layout_width="match_parent"
                      android:layout_height="2px"
                      android:background="#d6d6d6"/>

                <ImageView android:layout_width="126dp"
                           android:layout_height="126dp"
                           android:layout_gravity="center"
                           android:layout_marginTop="20dp"
                           android:src="@drawable/er_code"/>

            </LinearLayout>

        </LinearLayout>

        <View android:layout_width="match_parent"
              android:layout_height="2px"
              android:layout_marginLeft="32dp"
              android:layout_marginRight="32dp"
              android:layout_marginTop="20dp"
              android:background="#d6d6d6"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="查看更多车辆"
            android:textColor="#333"
            android:textSize="16sp"/>

        <cn.longchou.cardisplay.view.HorizontalListView
            android:id="@+id/lv_horizon"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="32dp"
            android:background="#fff"/>
    </LinearLayout>

    <LinearLayout android:layout_width="364dp"
                  android:layout_height="match_parent"
                  android:layout_gravity="right"
                  android:layout_marginLeft="32dp"
                  android:background="#fff"
                  android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginLeft="26dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="基本参数"
            android:textColor="#333"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="#d6d6d6"
        android:layout_marginBottom="20dp"/>
        <ListView
            android:id="@+id/lv_car_detail_params"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            android:dividerHeight="0dp">

        </ListView>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>